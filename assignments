#include <stdio.h>
#include "pattern.h"


void p1(void){
 for(int i=1;i<=5;i++){
    for(int j=1;j<=i;j++){
        printf("*");
    }
    printf("\n");
 }

}
void p2(void){
for(int i=1;i<=5;i++){
    for(int j=5;j>=i;j--){
    printf("*");
    }
   printf("\n");
 }
}
 void p3(void){
 for(int i=1;i<6;i++){
    for(int j=0;j<6;j++){
        printf("%d",i);
    }
    printf("\n");
 }
} void p4(void){
 for(int i=5;i>0;i--){
    for(int j=0;j<6;j++){
        printf("%d",i);
    }
    printf("\n");

 }
 }



